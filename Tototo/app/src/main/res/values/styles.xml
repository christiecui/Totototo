<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabMaxWidth">@dimen/tab_max_width</item>
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">@color/tab_bgcolor</item>
        <item name="tabSelectedTextColor">?android:textColorPrimary</item>
    </style>

    <style name="ChrisNaviagationLayout" parent="Widget.Design.NavigationView">
        <item name="android:background">@color/tab_bgcolor</item>
    </style>

    <style name="progressBar_webview">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/layer_webview_progressbar_bg</item>
        <item name="android:minHeight">2.5dp</item>
        <item name="android:maxHeight">2.5dp</item>
    </style>
</resources>
